{
    "packages": [
        "packages/*",
        "e2e"
    ],
    "command": {
        "bootstrap": {
            "npmClientArgs": [
                "--silent",
                "--pure-lockfile",
                "--no-progress"
            ]
        },
        "publish": {
            "npmClient": "npm"
        },
        "run": {
            "ignore": "teraslice-e2e",
            "concurrency": 12
        }
    },
    "sort": true,
    "loglevel": "warn",
    "reject-cycles": true,
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "independent"
}
